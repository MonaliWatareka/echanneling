package com.patient;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

import java.io.IOException;
import java.util.List;

public class availabilityListServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		// Get the logged-in doctor's name (dName) from the session
        HttpSession session = request.getSession();
        String dName = (String) session.getAttribute("dName");

        // If dName is not present in the session, redirect to login
        if (dName == null || dName.isEmpty()) {
            response.sendRedirect("login.jsp");
            return;
        }
		    
		// Retrieve the latest availability data from the database
		List<availability> allAvailabilities = PatientDBUtil.getAllAvailabilities(dName);
		request.setAttribute("allAvailabilities", allAvailabilities);
		
		// Forward to the JSP page to display the updated list
		RequestDispatcher dis = request.getRequestDispatcher("availabilityList.jsp");
		dis.forward(request, response);
	
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		doGet(request, response);	
	
	}
	

}
