package com.patient;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

import java.io.IOException;

public class setAvailabilityServelet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		 // Get the logged-in doctor's name (dName) from the session
        HttpSession session = request.getSession();
        String dName = (String) session.getAttribute("dName"); // doctor name stored in the session

        // If dName is not present, redirect to login or error page
        if (dName == null || dName.isEmpty()) {
            RequestDispatcher dis = request.getRequestDispatcher("login.jsp");
            dis.forward(request, response);
            return;
        }
		
		// Retrieve availability details from form submission
		String name = request.getParameter("doctorname");
		String date = request.getParameter("date");
		String starttime = request.getParameter("starttime");
		String endtime = request.getParameter("endtime");
		String hospital = request.getParameter("hospital");
		
		// Call the DB utility method to set availability for the logged-in doctor
		boolean isTrue;
		
		isTrue = PatientDBUtil.setAvailability(name, date, starttime, endtime, hospital);
		
		if(isTrue == true) {
			
			// Redirect to display availabilities with success message
			String alertMessage = "success!!";
			response.getWriter().println("<script> alert('"+alertMessage+"'); window.location.href ='display'</script>");
			
		}else {
			
			// Forward to error/failed page if the database operation fails
			RequestDispatcher dis2 = request.getRequestDispatcher("failed.jsp");
			dis2.forward(request, response);
			
		}
	}
	}


